<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:background="@mipmap/bg_set"
        android:layout_width="@dimen/x530"
        android:layout_height="@dimen/x340"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:gravity="center"
            android:textSize="@dimen/x30"
            android:text="处方详情"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_marginTop="@dimen/x22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x24"
                android:gravity="center|left"
                android:text="病名:"
                android:textSize="@dimen/x24"
                android:textColor="@color/white" />

            <TextView
                android:textSize="@dimen/x24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x24"
                android:gravity="center|left"
                android:text="登登登登"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x24"
            android:gravity="center|left"
            android:text="处方:"
            android:textSize="@dimen/x24"
            android:textColor="@color/white" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <GridView
                android:numColumns="4"
                android:id="@+id/gv_data"
                android:layout_above="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/x20"
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_confirm"
                android:layout_width="@dimen/x145"
                android:layout_height="@dimen/x42"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/button_orange"
                android:text="确定"
                android:layout_marginBottom="@dimen/x27"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>