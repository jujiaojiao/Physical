<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar_common_back" />

    <LinearLayout
        android:layout_gravity="center"
        android:background="@mipmap/border"
        android:layout_width="@dimen/x1789"
        android:layout_height="@dimen/x910">
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_marginTop="@dimen/x56"
            android:layout_marginBottom="@dimen/x56"
            android:layout_width="match_parent"
            android:id="@+id/refreshlayout"
            android:scrollbars="none"
            android:layout_height="match_parent">
            <android.support.v4.widget.NestedScrollView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="@dimen/x1789"
                    android:layout_height="@dimen/x910"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x18"
                        android:layout_marginLeft="@dimen/x60"
                        android:gravity="center|left"
                        android:text="个人基本信息"
                        android:textColor="@color/color_d0f1ff"
                        android:textSize="@dimen/x30"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/x35"
                        android:layout_marginRight="@dimen/x35"
                        android:background="@color/color_35C1F0" />
                    <LinearLayout
                        android:layout_marginTop="@dimen/x50"
                        android:paddingLeft="@dimen/x60"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="姓名"
                            android:textColor="@color/color_00fcff"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_name"
                            android:text="张三丰"
                            android:layout_marginLeft="@dimen/x110"
                            android:textColor="@color/color_00d0fd"
                            android:textSize="@dimen/x24"
                            android:layout_width="@dimen/x200"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="手机号"
                            android:layout_marginLeft="@dimen/x110"
                            android:textColor="@color/color_00fcff"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_phone"
                            android:text="18700932289"
                            android:layout_marginLeft="@dimen/x50"
                            android:textColor="@color/color_00d0fd"
                            android:textSize="@dimen/x24"
                            android:layout_width="@dimen/x150"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="身份证号"
                            android:layout_marginLeft="@dimen/x110"
                            android:textColor="@color/color_00fcff"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_iden"
                            android:text="610321199009141120"
                            android:layout_marginLeft="@dimen/x60"
                            android:textColor="@color/color_00d0fd"
                            android:textSize="@dimen/x24"
                            android:layout_width="@dimen/x250"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="性别"
                            android:layout_marginLeft="@dimen/x110"
                            android:textColor="@color/color_00fcff"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_sex"
                            android:text="男"
                            android:layout_marginLeft="@dimen/x100"
                            android:textColor="@color/color_00d0fd"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/x44"
                        android:paddingLeft="@dimen/x60"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="出生日期"
                            android:textColor="@color/color_00fcff"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_birthday"
                            android:text="1980.09.14"
                            android:layout_marginLeft="@dimen/x60"
                            android:textColor="@color/color_00d0fd"
                            android:textSize="@dimen/x24"
                            android:layout_width="@dimen/x200"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="出诊日期"
                            android:layout_marginLeft="@dimen/x110"
                            android:textColor="@color/color_00fcff"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_out"
                            android:text="1980.09.14"
                            android:layout_marginLeft="@dimen/x30"
                            android:textColor="@color/color_00d0fd"
                            android:textSize="@dimen/x24"
                            android:layout_width="@dimen/x150"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="身高（cm）"
                            android:layout_marginLeft="@dimen/x110"
                            android:textColor="@color/color_00fcff"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_high"
                            android:text="174.5"
                            android:layout_marginLeft="@dimen/x23"
                            android:textColor="@color/color_00d0fd"
                            android:textSize="@dimen/x24"
                            android:layout_width="@dimen/x250"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="体重（kg）"
                            android:layout_marginLeft="@dimen/x110"
                            android:textColor="@color/color_00fcff"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_weight"
                            android:text="98.23"
                            android:paddingLeft="@dimen/x30"
                            android:textColor="@color/color_00d0fd"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/x44"
                        android:paddingLeft="@dimen/x60"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="会员卡金额"
                            android:textColor="@color/color_00fcff"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_money"
                            android:text="1980"
                            android:layout_marginLeft="@dimen/x35"
                            android:textColor="@color/color_00d0fd"
                            android:textSize="@dimen/x24"
                            android:layout_width="@dimen/x200"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="剩余次数"
                            android:layout_marginLeft="@dimen/x110"
                            android:textColor="@color/color_00fcff"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_time"
                            android:text="12"
                            android:layout_marginLeft="@dimen/x30"
                            android:textColor="@color/color_00d0fd"
                            android:textSize="@dimen/x24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x18"
                        android:layout_marginLeft="@dimen/x60"
                        android:layout_marginTop="@dimen/x50"
                        android:gravity="center|left"
                        android:text="个人疾病史"
                        android:textColor="@color/color_d0f1ff"
                        android:textSize="@dimen/x30"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/x35"
                        android:layout_marginRight="@dimen/x35"
                        android:background="@color/color_35C1F0" />
                    <com.physical.app.common.widget.MyGridView
                        android:layout_above="@+id/ll_bottome"
                        android:id="@+id/gv_data"
                        android:layout_marginBottom="@dimen/x30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x29"
                        android:numColumns="9"
                        android:paddingLeft="@dimen/x46"
                        android:paddingRight="@dimen/x46"
                        android:verticalSpacing="@dimen/x27" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x18"
                        android:layout_marginLeft="@dimen/x60"
                        android:layout_marginTop="@dimen/x50"
                        android:gravity="center|left"
                        android:text="诊疗记录"
                        android:textColor="@color/color_d0f1ff"
                        android:textSize="@dimen/x30"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:background="@color/color_021E4F"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/x1740"
                        android:layout_height="@dimen/x70">
                        <TextView
                            android:layout_width="@dimen/x160"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x50"
                            android:gravity="center"
                            android:text="序号"
                            android:textColor="@color/color_d0f1ff"
                            android:textSize="@dimen/x30"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="@dimen/x280"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x50"
                            android:gravity="center"
                            android:text="时间"
                            android:textColor="@color/color_d0f1ff"
                            android:textSize="@dimen/x30"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="@dimen/x330"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x50"
                            android:gravity="center"
                            android:text="地点"
                            android:textColor="@color/color_d0f1ff"
                            android:textSize="@dimen/x30"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="@dimen/x390"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x50"
                            android:gravity="center"
                            android:text="选用幼苗"
                            android:textColor="@color/color_d0f1ff"
                            android:textSize="@dimen/x30"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <com.physical.app.common.widget.MyListView
                        android:layout_above="@+id/ll_bottome"
                        android:id="@+id/lv_data"
                        android:layout_marginBottom="@dimen/x30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x29"
                        android:numColumns="9"
                        android:paddingLeft="@dimen/x46"
                        android:paddingRight="@dimen/x46"
                        android:verticalSpacing="@dimen/x27" />
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>

</LinearLayout>