<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar_common_back" />

    <LinearLayout
        android:layout_width="@dimen/x1789"
        android:layout_height="@dimen/x910"
        android:layout_gravity="center"
        android:background="@mipmap/border"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x18"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginTop="@dimen/x54"
            android:gravity="center|left"
            android:text="个人基本信息"
            android:textColor="@color/color_d0f1ff"
            android:textSize="@dimen/x30"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginRight="@dimen/x35"
            android:background="@color/color_35C1F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x65"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x74">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/color_00fcff"
                    android:textSize="@dimen/x24" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="@dimen/x360"
                    android:layout_height="@dimen/x50"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@mipmap/input_box"
                    android:hint="请输入会员姓名"
                    android:paddingLeft="@dimen/x10"
                    android:textColor="@color/color_35C1F0"
                    android:textColorHint="@color/color_35C1F0"
                    android:textSize="@dimen/x17" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x70"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/color_00fcff"
                    android:textSize="@dimen/x24" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="@dimen/x360"
                    android:layout_height="@dimen/x50"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@mipmap/input_box"
                    android:hint="请输入手机号码"
                    android:paddingLeft="@dimen/x10"
                    android:textColor="@color/color_35C1F0"
                    android:textColorHint="@color/color_35C1F0"
                    android:textSize="@dimen/x17" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x70"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    android:textColor="@color/color_00fcff"
                    android:textSize="@dimen/x24" />

                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="@dimen/x360"
                    android:layout_height="@dimen/x50"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@mipmap/input_box"
                    android:hint="请输入身份证号码"
                    android:paddingLeft="@dimen/x10"
                    android:textColor="@color/color_35C1F0"
                    android:textColorHint="@color/color_35C1F0"
                    android:textSize="@dimen/x17" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x70"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/color_00fcff"
                    android:textSize="@dimen/x24" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/x20"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_circle_none" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x12"
                            android:text="男"
                            android:textColor="#ff44ddeb"
                            android:textSize="@dimen/x22" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x62"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/x20"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_circle_none" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x12"
                            android:text="女"
                            android:textColor="#ff44ddeb"
                            android:textSize="@dimen/x22" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_recharge"
                android:layout_width="@dimen/x106"
                android:layout_height="@dimen/x46"
                android:layout_marginLeft="@dimen/x74"
                android:layout_marginTop="@dimen/x34"
                android:src="@mipmap/icon_recharge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x52"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x74">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生日期"
                    android:textColor="@color/color_00fcff"
                    android:textSize="@dimen/x24" />

                <LinearLayout
                    android:id="@+id/ll_birthday"
                    android:layout_width="@dimen/x360"
                    android:layout_height="@dimen/x50"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@mipmap/input_box"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="@dimen/x310"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:hint="选择日期"
                        android:paddingRight="@dimen/x10"
                        android:textColor="@color/color_00fcff"
                        android:textSize="@dimen/x24" />

                    <ImageView
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x28"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_date" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x70"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出诊日期"
                    android:textColor="@color/color_00fcff"
                    android:textSize="@dimen/x24" />

                <LinearLayout
                    android:layout_width="@dimen/x360"
                    android:layout_height="@dimen/x50"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@mipmap/input_box"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_out"
                        android:layout_width="@dimen/x310"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:hint="选择日期"
                        android:paddingRight="@dimen/x10"
                        android:textColor="@color/color_00fcff"
                        android:textSize="@dimen/x24" />

                    <ImageView
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x28"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_date" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x70"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身高（cm）"
                    android:textColor="@color/color_00fcff"
                    android:textSize="@dimen/x24" />

                <EditText
                    android:id="@+id/et_high"
                    android:layout_width="@dimen/x360"
                    android:layout_height="@dimen/x50"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@mipmap/input_box"
                    android:hint="请输入身高"
                    android:paddingLeft="@dimen/x10"
                    android:textColor="@color/color_35C1F0"
                    android:textColorHint="@color/color_35C1F0"
                    android:textSize="@dimen/x17" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x70"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体重（kg）"
                    android:textColor="@color/color_00fcff"
                    android:textSize="@dimen/x24" />

                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="@dimen/x360"
                    android:layout_height="@dimen/x50"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@mipmap/input_box"
                    android:hint="请输入体重"
                    android:paddingLeft="@dimen/x10"
                    android:textColor="@color/color_35C1F0"
                    android:textColorHint="@color/color_35C1F0"
                    android:textSize="@dimen/x17" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x90"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginTop="@dimen/x60"
            android:gravity="center|left"
            android:text="个人疾病史"
            android:textColor="@color/color_d0f1ff"
            android:textSize="@dimen/x30"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginRight="@dimen/x35"
            android:background="@color/color_35C1F0" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <GridView
                android:layout_above="@+id/ll_bottome"
                android:id="@+id/gv_data"
                android:layout_marginBottom="@dimen/x40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x29"
                android:numColumns="6"
                android:paddingLeft="@dimen/x46"
                android:paddingRight="@dimen/x46"
                android:verticalSpacing="@dimen/x35" />
            <LinearLayout
                android:id="@+id/ll_bottome"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x40"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/x648"
                    android:id="@+id/tv_cancel"
                    android:text="取消"
                    android:gravity="center"
                    android:background="@mipmap/button_blue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x26"
                    android:layout_width="@dimen/x145"
                    android:layout_height="@dimen/x42" />
                <TextView
                    android:layout_marginLeft="@dimen/x200"
                    android:id="@+id/tv_confirm"
                    android:text="确认"
                    android:background="@mipmap/button_orange"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x26"
                    android:layout_width="@dimen/x145"
                    android:layout_height="@dimen/x42"/>
            </LinearLayout>
        </RelativeLayout>



    </LinearLayout>



</LinearLayout>