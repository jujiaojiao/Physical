<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="@dimen/x744"
        android:layout_height="@dimen/x96"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x236"
        android:src="@mipmap/title_two" />

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/border" />

    <ImageView
        android:layout_marginBottom="92dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arc" />

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x62"
        android:background="@mipmap/input_box"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/icon_account" />

        <EditText
            android:inputType="number"
            android:id="@+id/et_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:gravity="center|left"
            android:hint="姓名"
            android:textColor="@color/color_12adb3"
            android:textColorHint="@color/color_12adb3"
            android:textSize="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x19"
        android:background="@mipmap/input_box"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/icon_phone" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:gravity="center|left"
            android:hint="+86"
            android:textColor="@color/color_12adb3"
            android:textColorHint="@color/color_12adb3"
            android:textSize="8dp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/color_12adb3"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center|left"
            android:hint="输入手机号"
            android:textColor="@color/color_12adb3"
            android:textColorHint="@color/color_12adb3"
            android:textSize="8dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x19"
        android:background="@mipmap/input_box"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/icon_password" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:gravity="center|left"
            android:hint="输入密码"
            android:textColor="@color/color_12adb3"
            android:textColorHint="@color/color_12adb3"
            android:textSize="8dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_repwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x19"
        android:background="@mipmap/input_box"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/icon_password" />

        <EditText
            android:id="@+id/et_repwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:gravity="center|left"
            android:hint="输入密码"
            android:textColor="@color/color_12adb3"
            android:textColorHint="@color/color_12adb3"
            android:textSize="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_repwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x19"
        android:background="@mipmap/input_box"
        android:orientation="horizontal">

        <EditText
            android:layout_marginLeft="24dp"
            android:id="@+id/et_code"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center|left"
            android:hint="输入验证码"
            android:textColor="@color/color_12adb3"
            android:textColorHint="@color/color_12adb3"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="56dp"
            android:layout_height="23dp"
            android:text="获取验证码"
            android:textColor="@color/color_052c48"
            android:textSize="20sp"
            android:background="@drawable/bg_get_code"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/button_login"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white" />

    <TextView
        android:textSize="@dimen/x27"
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="使用已有账户登录"
        android:textColor="@color/color_05C9D3" />

</RelativeLayout>