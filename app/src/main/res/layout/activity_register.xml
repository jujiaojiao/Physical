<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="@dimen/x744"
        android:layout_height="@dimen/x87"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x148"
        android:src="@mipmap/title_two" />

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_marginTop="@dimen/x347"
        android:layout_marginLeft="@dimen/x548"
        android:layout_width="@dimen/y824"
        android:layout_height="@dimen/x363"
        android:layout_centerInParent="true"
        android:src="@mipmap/border_circle" />

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x71"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_bottom"
        android:layout_width="@dimen/x403"
        android:layout_height="@dimen/x107"
        android:src="@mipmap/arc" />

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="@dimen/x456"
        android:layout_height="@dimen/x69"
        android:layout_below="@+id/iv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x69"
        android:background="@mipmap/input_box"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/x28"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x26"
            android:src="@mipmap/icon_account" />

        <EditText
            android:id="@+id/et_user"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x35"
            android:background="@null"
            android:gravity="center|left"
            android:hint="姓名"
            android:textColor="@color/color_12adb3"
            android:textColorHint="@color/color_12adb3"
            android:textSize="@dimen/x24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="@dimen/x456"
        android:layout_height="@dimen/x69"
        android:layout_below="@+id/ll_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x10"
        android:background="@mipmap/input_box"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/x28"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x26"
            android:src="@mipmap/icon_phone" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x35"
            android:background="@null"
            android:gravity="center|left"
            android:hint="+86"
            android:textColor="@color/color_12adb3"
            android:textColorHint="@color/color_12adb3"
            android:textSize="@dimen/x24" />
        <View
            android:layout_width="1dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/x26"
            android:layout_margin="@dimen/x10"
            android:background="@color/color_12adb3"/>
        <EditText
            android:singleLine="true"
            android:inputType="number"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center|left"
            android:hint="输入手机号"
            android:textColor="@color/color_12adb3"
            android:textColorHint="@color/color_12adb3"
            android:textSize="@dimen/x24" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_width="@dimen/x456"
        android:layout_height="@dimen/x69"
        android:layout_below="@+id/ll_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x10"
        android:background="@mipmap/input_box"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/x28"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x26"
            android:src="@mipmap/icon_password" />

        <EditText
            android:singleLine="true"
            android:inputType="textPassword"
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x35"
            android:background="@null"
            android:gravity="center|left"
            android:hint="输入密码"
            android:textColor="@color/color_12adb3"
            android:textColorHint="@color/color_12adb3"
            android:textSize="@dimen/x24" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_repwd"
        android:layout_width="@dimen/x456"
        android:layout_height="@dimen/x69"
        android:layout_below="@+id/ll_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x10"
        android:background="@mipmap/input_box"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/x28"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x26"
            android:src="@mipmap/icon_password" />

        <EditText
            android:singleLine="true"
            android:inputType="textPassword"
            android:id="@+id/et_repwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x35"
            android:background="@null"
            android:gravity="center|left"
            android:hint="输入密码"
            android:textColor="@color/color_12adb3"
            android:textColorHint="@color/color_12adb3"
            android:textSize="@dimen/x24" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_code"
        android:layout_width="@dimen/x456"
        android:layout_height="@dimen/x69"
        android:layout_below="@+id/ll_repwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x10"
        android:background="@mipmap/input_box"
        android:orientation="horizontal">

        <EditText
            android:singleLine="true"
            android:inputType="number"
            android:layout_marginLeft="@dimen/x26"
            android:id="@+id/et_code"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center|left"
            android:hint="输入验证码"
            android:textColor="@color/color_12adb3"
            android:textColorHint="@color/color_12adb3"
            android:textSize="@dimen/x24" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_getcode"
            android:layout_width="@dimen/x169"
            android:layout_height="@dimen/x62"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="@color/color_052c48"
            android:textSize="@dimen/x23"
            android:background="@drawable/bg_get_code"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="@dimen/x456"
        android:layout_height="@dimen/x69"
        android:layout_below="@+id/ll_code"
        android:layout_marginTop="@dimen/x14"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/button_login"
        android:gravity="center"
        android:textSize="@dimen/x35"
        android:text="登录"
        android:textColor="@color/white" />

    <TextView
        android:textSize="@dimen/x30"
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x23"
        android:text="使用已有账户登录"
        android:textColor="@color/color_05C9D3" />

</RelativeLayout>