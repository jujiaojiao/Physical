<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    tools:context="com.physical.app.MainActivity">

    <LinearLayout
        android:layout_margin = "20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_title"
            android:drawablePadding="8dp"
            android:gravity="center|left"
            android:drawableLeft="@mipmap/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州场导"
            android:textColor="#ffffffff"
            android:textSize="9sp"
            />
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_phone"
            />
        <TextView
            android:id="@+id/tv_username"
            android:layout_marginLeft="20dp"
            android:layout_width="27dp"
            android:layout_height="9dp"
            android:text="张晓明"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="9sp"
            />
    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_marginLeft="109dp"
            android:id="@+id/ll_local_music"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_local_mucic"
                android:src="@mipmap/icon_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本地音乐"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/ll_phsical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_pysical"
                android:src="@mipmap/icon_physical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="理疗"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:layout_marginRight="109dp"
            android:id="@+id/ll_vip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_vip"
                android:src="@mipmap/icon_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="会员信息"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/ll_local_music"
            android:id="@+id/ll_set"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="197dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_set"
                android:src="@mipmap/icon_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_local_music"
            android:id="@+id/ll_qq_music"
            android:layout_marginTop="30dp"
            android:layout_marginRight="187dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_qq"
                android:src="@mipmap/icon_qqmusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="门磁开关"
            android:textColor="#ffffffff"
            android:textSize="11sp"
            />
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/iv_switch"
            android:src="@mipmap/button_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
