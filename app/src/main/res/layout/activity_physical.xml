<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar_common_back_menu"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@mipmap/border"
        android:layout_width="@dimen/x1789"
        android:layout_height="@dimen/x910">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x110">
            <TextView
                android:text="诊疗用户"
                android:paddingTop="@dimen/x30"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/x60"
                android:gravity="center|left"
                android:textSize="@dimen/x30"
                android:textColor="@color/color_d0f1ff"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x110" />
            <TextView
                android:id="@+id/tv_user"
                android:paddingTop="@dimen/x30"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/x30"
                android:gravity="center|left"
                android:textSize="@dimen/x30"
                android:textColor="@color/color_d0f1ff"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x110" />
        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginRight="@dimen/x35"
            android:background="@color/color_35C1F0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginLeft="@dimen/x50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="@dimen/x80"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x250">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/icon_light"
                                android:layout_width="@dimen/x199"
                                android:layout_height="@dimen/x199" />
                            <TextView
                                android:gravity="center"
                                android:text="灯光"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <GridView
                            android:id="@+id/gv_data1"
                            android:gravity="center_vertical"
                            android:numColumns="9"
                            android:listSelector="#00000000"
                            android:horizontalSpacing="0dp"
                            android:layout_width="@dimen/x500"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="@dimen/x209"
                        android:layout_marginLeft="@dimen/x108"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/icon_miao"
                                android:layout_width="@dimen/x199"
                                android:layout_height="@dimen/x199" />
                            <TextView
                                android:gravity="center"
                                android:text="苗光"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <GridView
                            android:id="@+id/gv_data2"
                            android:gravity="center_vertical"
                            android:numColumns="9"
                            android:listSelector="#00000000"
                            android:horizontalSpacing="0dp"
                            android:layout_width="@dimen/x500"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/x130"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/icon_strength"
                                android:layout_width="@dimen/x199"
                                android:layout_height="@dimen/x199" />
                            <TextView
                                android:gravity="center"
                                android:text="磁场强度"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <GridView
                            android:id="@+id/gv_data3"
                            android:gravity="center_vertical"
                            android:numColumns="9"
                            android:listSelector="#00000000"
                            android:horizontalSpacing="0dp"
                            android:layout_width="@dimen/x500"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="@dimen/x209"
                        android:layout_marginLeft="@dimen/x108"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/icon_time"
                                android:layout_width="@dimen/x199"
                                android:layout_height="@dimen/x199" />
                            <TextView
                                android:gravity="center"
                                android:text="时间(min)"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <GridView
                            android:id="@+id/gv_data4"
                            android:gravity="center_vertical"
                            android:numColumns="9"
                            android:listSelector="#00000000"
                            android:horizontalSpacing="0dp"
                            android:layout_width="@dimen/x500"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x250">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/icon_wave"
                                android:layout_width="@dimen/x199"
                                android:layout_height="@dimen/x199" />
                            <TextView
                                android:gravity="center"
                                android:text="超声波"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <GridView
                            android:id="@+id/gv_data5"
                            android:gravity="center_vertical"
                            android:numColumns="9"
                            android:listSelector="#00000000"
                            android:horizontalSpacing="0dp"
                            android:layout_width="@dimen/x500"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="@dimen/x209"
                        android:layout_marginLeft="@dimen/x108"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/icon_shortwave"
                                android:layout_width="@dimen/x199"
                                android:layout_height="@dimen/x199" />
                            <TextView
                                android:gravity="center"
                                android:text="超短波"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <GridView
                            android:id="@+id/gv_data6"
                            android:gravity="center_vertical"
                            android:numColumns="9"
                            android:listSelector="#00000000"
                            android:horizontalSpacing="0dp"
                            android:layout_width="@dimen/x500"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/x130"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@mipmap/icon_light"
                                android:layout_width="@dimen/x199"
                                android:layout_height="@dimen/x199" />
                            <TextView
                                android:gravity="center"
                                android:text="波导管"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <GridView
                            android:id="@+id/gv_data7"
                            android:gravity="center_vertical"
                            android:numColumns="9"
                            android:listSelector="#00000000"
                            android:horizontalSpacing="0dp"
                            android:layout_width="@dimen/x500"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/x68"
            android:layout_marginLeft="@dimen/x300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="理疗调整："
                android:textColor="@color/white"
                android:textSize="@dimen/x24"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_off"
                android:layout_marginLeft="@dimen/x37"
                android:src="@mipmap/button_physical_off"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/x110" />
            <ImageView
                android:layout_marginLeft="@dimen/x39"
                android:id="@+id/iv_on"
                android:src="@mipmap/button_physical_on"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/x110" />

            <TextView
                android:layout_marginLeft="@dimen/x415"
                android:text="剩余时间："
                android:textColor="@color/white"
                android:textSize="@dimen/x24"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="@dimen/x37"
                android:text="00:00"
                android:gravity="bottom"
                android:textStyle="bold"
                android:textSize="@dimen/x59"
                android:textColor="@color/color_ff0000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>