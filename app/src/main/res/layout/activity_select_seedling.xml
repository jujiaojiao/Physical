<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar_common_back" />

    <LinearLayout
        android:layout_width="@dimen/x1789"
        android:layout_height="@dimen/x910"
        android:layout_gravity="center"
        android:background="@mipmap/border"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x18"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginTop="@dimen/x54"
            android:gravity="center|left"
            android:text="处方推荐"
            android:textColor="@color/color_d0f1ff"
            android:textSize="@dimen/x30"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginRight="@dimen/x35"
            android:background="@color/color_35C1F0" />
        <GridView
            android:id="@+id/gv_recommend"
            android:layout_marginBottom="@dimen/x40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x29"
            android:numColumns="2"
            android:paddingRight="@dimen/x323"
            android:paddingLeft="@dimen/x323"
            android:verticalSpacing="@dimen/x35" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x18"
            android:layout_marginLeft="@dimen/x60"
            android:gravity="center|left"
            android:text="植物幼苗"
            android:textColor="@color/color_d0f1ff"
            android:textSize="@dimen/x30"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginRight="@dimen/x35"
            android:background="@color/color_35C1F0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <GridView
                android:id="@+id/gv_seedling"
                android:layout_marginBottom="@dimen/x40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x29"
                android:numColumns="2"
                android:layout_above="@+id/ll_bottome"
                android:paddingLeft="@dimen/x323"
                android:verticalSpacing="@dimen/x35" />
            <LinearLayout
                android:id="@+id/ll_bottome"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x40"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/x648"
                    android:id="@+id/tv_cancel"
                    android:text="取消"
                    android:gravity="center"
                    android:background="@mipmap/button_blue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x26"
                    android:layout_width="@dimen/x145"
                    android:layout_height="@dimen/x42" />
                <TextView
                    android:layout_marginLeft="@dimen/x200"
                    android:id="@+id/tv_confirm"
                    android:text="确认"
                    android:background="@mipmap/button_orange"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x26"
                    android:layout_width="@dimen/x145"
                    android:layout_height="@dimen/x42"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>