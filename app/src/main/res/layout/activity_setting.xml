<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar_common_back"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/x16"
            android:layout_marginBottom="@dimen/x21"
            android:orientation="vertical"
            android:background="@mipmap/border_small"
            android:layout_width="@dimen/x320"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_wifi"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x62"
                android:background="@mipmap/menu_orange"
                android:orientation="horizontal"
                android:layout_width="@dimen/x248"
                android:layout_height="@dimen/x81">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x33"
                    android:src="@mipmap/icon_wifi"
                    android:layout_width="@dimen/x41"
                    android:layout_height="@dimen/x32" />
                <TextView
                    android:id="@+id/tv_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="WIFI"
                    android:layout_marginLeft="@dimen/x11"
                    android:gravity="center"
                    android:textColor="@color/color_000308"
                    android:textSize="@dimen/x20"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_manage"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x40"
                android:background="@mipmap/menu_blue"
                android:orientation="horizontal"
                android:layout_width="@dimen/x248"
                android:layout_height="@dimen/x81">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x33"
                    android:src="@mipmap/icon_news"
                    android:layout_width="@dimen/x41"
                    android:layout_height="@dimen/x32" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="管理员信息"
                    android:layout_marginLeft="@dimen/x11"
                    android:gravity="center"
                    android:textColor="@color/color_000308"
                    android:textSize="@dimen/x20"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_recover"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x40"
                android:background="@mipmap/menu_blue"
                android:orientation="horizontal"
                android:layout_width="@dimen/x248"
                android:layout_height="@dimen/x81">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x33"
                    android:src="@mipmap/icon_recover"
                    android:layout_width="@dimen/x41"
                    android:layout_height="@dimen/x32" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="恢复出厂设置"
                    android:layout_marginLeft="@dimen/x11"
                    android:gravity="center"
                    android:textColor="@color/color_000308"
                    android:textSize="@dimen/x20"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_update"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x40"
                android:background="@mipmap/menu_blue"
                android:orientation="horizontal"
                android:layout_width="@dimen/x248"
                android:layout_height="@dimen/x81">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x33"
                    android:src="@mipmap/icon_update"
                    android:layout_width="@dimen/x41"
                    android:layout_height="@dimen/x32" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="版本更新"
                    android:layout_marginLeft="@dimen/x11"
                    android:gravity="center"
                    android:textColor="@color/color_000308"
                    android:textSize="@dimen/x20"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_repair"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x40"
                android:background="@mipmap/menu_blue"
                android:orientation="horizontal"
                android:layout_width="@dimen/x248"
                android:layout_height="@dimen/x81">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x33"
                    android:src="@mipmap/icon_repair"
                    android:layout_width="@dimen/x41"
                    android:layout_height="@dimen/x32" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="设备报修"
                    android:layout_marginLeft="@dimen/x11"
                    android:gravity="center"
                    android:textColor="@color/color_000308"
                    android:textSize="@dimen/x20"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_times"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x40"
                android:background="@mipmap/menu_blue"
                android:orientation="horizontal"
                android:layout_width="@dimen/x248"
                android:layout_height="@dimen/x81">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x33"
                    android:src="@mipmap/icon_times"
                    android:layout_width="@dimen/x41"
                    android:layout_height="@dimen/x32" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="设备报修"
                    android:layout_marginLeft="@dimen/x11"
                    android:gravity="center"
                    android:textColor="@color/color_000308"
                    android:textSize="@dimen/x20"
                    />
            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_marginRight="@dimen/x60"
            android:layout_marginBottom="@dimen/x21"
            android:layout_marginLeft="@dimen/x29"
            android:id="@+id/framlayout"
            android:background="@mipmap/border_big"
            android:layout_width="@dimen/x1444"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>