<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x100"
        android:gravity="center|left"
        android:text="版本更新"
        android:textColor="@color/color_1cbae1"
        android:textSize="@dimen/x56" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_35C1F0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已是最新版本"
            android:textColor="#ff1cbae1"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tv_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V1.13.14"
            android:textColor="#ff68dffd"
            android:textSize="22dp" />
        <TextView
            android:id="@+id/tv_check_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检测新版本"
            android:textColor="#ffff8122"
            android:textSize="22dp"
            />
    </LinearLayout>
</LinearLayout>