<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/x60"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90">
        <TextView
            android:text="wifi"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x60"
            android:gravity="center|left"
            android:textSize="@dimen/x30"
            android:layout_weight="1"
            android:textColor="@color/color_d0f1ff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_switch"
            android:layout_marginRight="@dimen/x63"
            android:src="@mipmap/button_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/x35"
        android:layout_marginRight="@dimen/x35"
        android:background="@color/color_35C1F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ListView
        android:id="@+id/lv_data"
        android:dividerHeight="1dp"
        android:scrollbars="none"
        android:paddingRight="@dimen/x35"
        android:paddingLeft="@dimen/x35"
        android:divider="@color/color_35C1F0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>