<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x100"
        android:gravity="center|left"
        android:text="理疗次数"
        android:textColor="@color/color_1cbae1"
        android:textSize="@dimen/x56" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_35C1F0" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x100"
            android:gravity="center|left"
            android:text="开始日期"
            android:textColor="@color/color_1cbae1"
            android:textSize="@dimen/x56" />
        <TextView
            android:id="@+id/tv_start_time"
            android:background="@mipmap/input_box"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x100"
            android:gravity="center|left"
            android:drawableRight="@mipmap/icon_date"
            android:textColor="@color/color_1cbae1"
            android:textSize="@dimen/x56" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x100"
            android:gravity="center|left"
            android:text="结束日期"
            android:textColor="@color/color_1cbae1"
            android:textSize="@dimen/x56" />
        <TextView
            android:id="@+id/tv_end_time"
            android:background="@mipmap/input_box"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x100"
            android:gravity="center|left"
            android:drawableRight="@mipmap/icon_date"
            android:textColor="@color/color_1cbae1"
            android:textSize="@dimen/x56" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x100"
            android:gravity="center"
            android:background="@mipmap/button_orange"
            android:text="确定"
            android:textColor="@color/color_1cbae1"
            android:textSize="@dimen/x56" />
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshlayout"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lv_data"
            android:divider="@color/color_1cbae1"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>